Install kolekti

sudo apt-get install python-django
sudo apt-get install python-svn python-lxml python-whoosh
sudo apt-get install python-pip
sudo pip install pygal
sudo apt-get install python-sparqlwrapper

#git clone https://github.com/kolekti/kolekti.git
git clone git@github.com:kolekti/kolekti.git
git checkout ecorse

export PYTHONPATH=/media/donnees/web/ecorse/kolekti/src
cp /media/donnees/web/ecorse/kolekti/src/kolekti_server/db.sqlite3.ref /media/donnees/web/ecorse/kolekti/src/kolekti_server/db.sqlite3

python /media/donnees/web/ecorse/kolekti/src/kolekti_server/manage.py runserver

